<div class="container">
    <form id="loginForm" class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="inputUsername" class="sr-only">Username</label>
        <input type="text" name="username" id="inputUsername" class="form-control" placeholder="user.name" required autofocus>
         <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required autofocus>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <button id="btnLoginIn" class="btn btn-lg btn-primary btn-block" action="submit">Sign in</button>
    </form>
</div> <!-- /container -->